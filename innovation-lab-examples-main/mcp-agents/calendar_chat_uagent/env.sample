# Example environment configuration for Calendar Chat Agent
# Copy to `.env` (git-ignored) and fill real values.

# --- OpenAI API ---
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="o3-mini"

# --- Calendar Chat Agent ---
CAL_CHAT_AGENT_PORT=8089
CAL_CHAT_AGENT_NAME="calendar_chat_agent"
CAL_CHAT_AGENT_SEED="deterministic_calendar_seed"

# Directory for temporary OAuth token files
CAL_TOKENS_DIR=".tokens"

# --- Calendar FastMCP Server ---
CAL_MCP_PORT=8081
# When the Calendar MCP is exposed via ngrok or similar, set full SSE URL
CAL_MCP_URL="https://your-ngrok-subdomain.ngrok.app/sse/"

# Path to the Google OAuth client secret JSON (desktop app)
CAL_CREDENTIALS_FILE="calendar_client_secret.json"

# Enable verbose logging (true/false)
VERBOSE_CAL_LOGS=true

# --- Agentverse integration (optional) ---
AGENTVERSE_API_KEY=""
AGENTVERSE_URL="https://agentverse.ai" 